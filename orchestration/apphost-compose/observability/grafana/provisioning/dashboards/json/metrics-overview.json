{
  "uid": "tc-metrics",
  "title": "TC Agro - Metrics",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU (all services)",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"default\"}[5m]))",
          "legendFormat": "cpu",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "type": "stat",
      "title": "Memory (RSS)",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 9 },
      "targets": [
        {
          "expr": "sum(container_memory_rss{namespace=\"default\"}) / 1024 / 1024",
          "legendFormat": "MB",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "textMode": "value"
      }
    },
    {
      "type": "stat",
      "title": "Active Pods",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 9 },
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{phase=\"Running\"})",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "textMode": "value"
      }
    }
  ],
  "templating": { "list": [] }
}
