{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/api/*": [
        "src/api/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/stores/*": [
        "src/stores/*"
      ],
      "@/providers/*": [
        "src/providers/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/types/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
